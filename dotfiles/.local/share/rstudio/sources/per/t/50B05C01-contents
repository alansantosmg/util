install.packages("VennDiagram")
library(VennDiagram)

#Exemplo Grupo de 360 pessoas
# 120 leem jornal A
# 70  leem jornal B
# 150 leem jornal C
# 40  leem jornal A,B
# 15  leem jornal A,C
# 30  leem jornal B,C
# 5   leem jornal A,B,C


draw.triple.venn(area1 = 120, area2 = 70, area3 = 150, n12 = 40, n23 =30, n13= 15, n123 =5, category = c("A","B","C"), lty ="blank", fill = c("skyblue","pink1","mediumorchid") )
